{
  "compilerOptions": {
    "module": "amd",
    "target": "es2019",
    "noImplicitAny": true,
    "removeComments": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "baseUrl": "./src", // Apparently required only for VSC intellisense.
    "resolveJsonModule": true, // Must include SampleData.json.
    "types": [
      "moment"
    ]
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}